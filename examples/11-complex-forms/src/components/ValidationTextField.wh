import androidx.compose.material3.OutlinedTextField

@prop val value: String
@prop val onValueChange: (String) -> Unit
@prop val label: String
@prop val error: String
@prop val showError: Boolean

<Column spacing={4}>
  <OutlinedTextField
    value={value}
    onValueChange={onValueChange}
    label={label}
    isError={showError && !error.isEmpty()}
  />
  @if (showError && !error.isEmpty()) {
    <Text color="#F44336" fontSize={12}>{error}</Text>
  }
</Column>
