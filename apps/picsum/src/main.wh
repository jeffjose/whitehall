var seed = 1

fun refresh() {
  seed = seed + 1
  println("refresh called, seed = $seed")
}

<Column padding={16} spacing={8}>
  <Text>Seed: {seed}</Text>
  <Image src={"https://picsum.photos/seed/${seed}/300/200"} alt="Random photo" width="100%" height={200}/>
  <Button text="New Image" onClick={refresh} />
</Column>
