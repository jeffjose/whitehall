var x = 0
var seed = 1

fun refresh() {
  seed = seed + 1
  x = x + 1
}
<Text>Hi there</Text>

<Column padding={16} spacing={8}>
  <Image src={"https://picsum.photos/seed/${seed}/300/200"} alt="Random photo" width="100%"/>
  <Button text="New Image $x" onClick={refresh} />
</Column>

<Text>Bye</Text>
